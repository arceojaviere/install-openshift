#!/bin/bash
set -xe
ansible-playbook /usr/share/ansible/openshift-ansible/playbooks/adhoc/uninstall.yml
ansible-playbook /usr/share/ansible/openshift-ansible/playbooks/prerequisites.yml
ansible-playbook /usr/share/ansible/openshift-ansible/playbooks/deploy_cluster.yml
ansible-playbook -i postinstall/hosts_postinstall postinstall/create_persistentvolumes.yaml -e nfs_server={{ master_definition[0].hostname }}
ansible-playbook -i postinstall/hosts_postinstall postinstall/postinstall.yaml
