# Possible values are: azure, gce
cloud_provider: gce

name: openshift
region: us-east1
labels:
   host: openshift

# Username will be create at the host
admin_username: root

# Public Key file. Example: /home/john/.ssh/id_rsa.pub
admin_ssh_publickey: /home/mauricio/.ssh/id_rsa.pub   # MANDATORY

# The address where you're going to access OpenShift's Master
# Example: https://master.example.com:8443
openshift_master_url: openshift.maltron.solutionarchitectsredhat.com.br
# The address for applications, which it's going to be included into 
# Master's Configuration: /etc/origin/master/master-config.yml
openshift_cloudapps_url: cloudapps.maltron.solutionarchitectsredhat.com.br

# Red Hat Subscription to enable all the necessary packages for OpenShift
redhat_subscription_username: rhn-mleal          # MANDATORY
redhat_subscription_password: M@ltronACCESS#77   # MANDATORY

# If you omit this information, the playbook will find an poolid for you
# If wish to change the criteria, change the information on 
#     vim roles/redhat_subscription/defaults/main.yaml
redhat_subscription_pool_id:          # OPTIONAL

repositories:
    - rhel-7-server-rpms
    - rhel-7-server-extras-rpms
    - rhel-7-server-ose-3.9-rpms
    - rhel-7-fast-datapath-rpms
    - rhel-7-server-ansible-2.4-rpms
    - rhel-7-server-rhmap-4.5-rpms
    - rhel-7-server-3scale-amp-2.0-rpms

bastion_packages:
    - vim
    - wget
    - git
    - net-tools
    - bash-completion
    - httpd-tools
    - screen
    - deltarpm
    - ansible
    - atomic-openshift-utils
    - atomic-openshift-clients

# Necessary packages that must be installed in each host of the cluster
# https://docs.openshift.com/container-platform/3.9/install_config/install/host_preparation.html#installing-base-packages
ocp_hosts_packages:
    - vim
    - wget
    - git 
    - net-tools 
    - bind-utils 
    - iptables-services 
    - bridge-utils 
    - bash-completion 
    - kexec-tools 
    - sos 
    - psacct
    - deltarpm
    - docker 
    - atomic-openshift-excluder
    - atomic-openshift-docker-excluder

# GCE machine: n1-standard-4
bastion_definition: { hostname: "openshift-bastion", machine: "n1-standard-4", disk_type: "pd-standard", disk_size: 100 }
master_definition: 
   - { hostname: "openshift-master", machine: "n1-standard-8", disk_type: "pd-standard", disk_size: 100, disk_docker_size: 20, disk_docker_type: "pd-standard" }
infra_definition: 
   - { hostname: "openshift-infra", machine: "n1-standard-4", disk_type: "pd-standard", disk_size: 40, disk_docker_size: 20, disk_docker_type: "pd-standard" }
node_definition: 
   - { hostname: "openshift-node", machine: "n1-standard-4", disk_type: "pd-standard", disk_size: 40, disk_docker_size: 20, disk_docker_type: "pd-standard" }

# GOOGLE CLOUD ENGINE (GCE) specifics
#
# Those are the credentials necessary to create anything
gce_credentials_file: /home/mauricio/.gce/latam-development-testdrive.json
gce_project_id: latam-development-testdriveocp
gce_service_account_email: macmaltron@latam-development-testdriveocp.iam.gserviceaccount.com # MANDATORY

# (OPTIONAL) GCE Cloud DNS: DNS Service
# If you do have a Cloud DNS Zone, you can automatically 
# update OpenShift Master's IP and Infra Node's IP
gce_clouddns_zone: solutionarchitectsredhat.com.br
gce_clouddns_credentials_file: /home/mauricio/.gce/BR-demo-openshift-sas.json
gce_clouddns_project_id: superb-reporter-167018
gce_clouddns_service_account_email: maltronrebook@superb-reporter-167018.iam.gserviceaccount.com
